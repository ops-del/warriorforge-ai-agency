generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Automation {
  id               Int       @id @default(autoincrement())
  name             String
  slug             String    @unique
  shortDescription String
  fullDescription  String
  setupPrice       Int
  monthlyPrice     Int?
  nicheTags        String
  isFeatured       Boolean   @default(false)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  orders           Order[]
}

model Order {
  id               Int       @id @default(autoincrement())
  automationId     Int
  automation       Automation @relation(fields: [automationId], references: [id])
  businessName     String
  contactName      String
  email            String
  phone            String
  website          String?
  businessType     String
  notes            String?
  wantsMaintenance Boolean   @default(false)
  createdAt        DateTime  @default(now())
}

model DemoLead {
  id             Int      @id @default(autoincrement())
  automationSlug String
  automationName String
  name           String
  email          String
  phone          String?
  company        String?
  website        String?
  notes          String?
  createdAt      DateTime @default(now())
}
